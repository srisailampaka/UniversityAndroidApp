<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E8F2FE" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text=" User Name"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/student_username"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:layout_weight="20.74"
            android:background="@drawable/group_top_black"
            android:ems="1" />
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text=" Pass Word"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/student_password"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:layout_weight="20.74"
            android:background="@drawable/group_top_black"
            android:ems="1" />
    </LinearLayout>
    
     <Button 
         android:id="@+id/button_student_login"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Login"
         android:padding="10dp"
         android:background="@drawable/background_button"
         android:textColor="@android:color/white"
         android:textSize="25sp"
         android:layout_marginTop="60dp"
         android:layout_marginLeft="105dp"
         android:textStyle="bold"/>
     
     
     <Button 
         android:id="@+id/button_newstudent"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="New Student"
         android:padding="10dp"
         android:background="@drawable/background_button"
         android:textColor="@android:color/white"
         android:textSize="25sp"
         android:layout_marginTop="20dp"
         android:layout_marginLeft="65dp"
         android:textStyle="bold"/>
    
    

</LinearLayout>