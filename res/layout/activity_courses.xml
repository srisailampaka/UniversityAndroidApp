<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F2FE"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/sys_development"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="  System Development"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/IT_supply_chain"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="   IT Supply Chain"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

<TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Emerging Technologies"
    android:textColor="@android:color/black"
    android:layout_marginTop="30dp"
    android:textSize="25sp"
    
    android:layout_marginLeft="30dp"
    android:textStyle="bold"/>
 
    
    
    <Button
        android:id="@+id/courses_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_button"
        android:padding="15dp"
        android:text=" Back "
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

</LinearLayout>